<h2>User info</h2>
  <table class="table">
    <tr>
      <%= image_tag user.get_profile_image(100,100) %>
    </tr>
    <tr>
      <td>name</td>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <td>introduction</td>
      <td><%= user.introduction %></td>
    </tr>
  </table>


  <%= link_to edit_user_path(user.id), class:"btn btn-block btn-outline-secondary p-0 mt-3" do %>
      <i class="fas fa-user-cog"></i>

  <% end %>