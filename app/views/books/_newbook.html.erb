<div class="pt-4">
<h2>New book</h2>
  <%= form_with model: @book,local:true do |f| %>
    <div class="form-group">
     <%= f.label :title %></br>
     <%= f.text_field :title,class:"form-contorol" %>
    </div>
    <div class="form-group">
      <%= f.label :opinion %></br>
      <%= f.text_area :body,class:"form-control" %>
    </div>

    <%= f.submit "Create Book",class:"btn btn-success" %>
  <% end %>
</div>